extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/categorys/add", class="btn btn-info my-10 float-right") Add New Product
    table.table
        thead
            tr
                th(style="text-align:center") Type
                th(style="text-align:center") Band 
                th(style="text-align:center") Name
                th(style="text-align:center") Price
                th(style="text-align:center") Actions
        tbody
            each category in categorys
                tr
                    td(style="text-align:center")=category.type
                    td(style="text-align:center")=category.brand
                    td(style="text-align:center")=category.name
                    td(style="text-align:center")=category.price
                    td(style="text-align:center")
                        a(href="/categorys/delete/"+category._id, class="btn faas btn-danger") <i class="fas fa-trash-alt"></i>
                        a(href="/categorys/edit/"+category._id, class="btn  faas btn-success    ") <i class="fas fa-edit"></i>
                        a(href="/categorys/cart/"+category._id, class="btn faas btn-info") <i class="fas fa-cart-plus"></i>