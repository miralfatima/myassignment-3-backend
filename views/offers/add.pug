extends ../layout

block content
    h1 Add New Sales Item
    form(action="/offers/add",method="post")
        .form-group
            label(for="name")  Name
            input#name(type="text", class="form-control", name="name")
        .form-group
            label(for="price") Price
            input#price(type="text", class="form-control", name="price")
        
        input(type="submit", class="btn btn-info" )
    